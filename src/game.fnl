(local C 8) ; cell size
(local solids [1 3])
(local plr {:x 120 :y 68}) ; player
(local vel {:x 0 :y 0}) ; velocity

(lambda decr [tbl field amount]
  (tset tbl field (- (. tbl field) amount)))

(lambda incr [tbl field amount]
  (tset tbl field (+ (. tbl field) amount)))

(lambda tile [p]
  "Map tile from point"
  (let [x (// (. p :x) C)
        y (// (. p :y) C)]
    (mget x y)))

(lambda solid? [p]
  "Is the point at solid tile?"
  (contains? solids (tile p)))

;; TODO Add helper functions

(lambda draw-player [plr ?color]
  (rect
   (. plr :x)
   (. plr :y)
   C C (or color 12)))

(fn _G.TIC []
    (if (btn 2) (set vel.x -1)
        (btn 3) (set vel.x 1)
        (set vel.x 0))

    ;; TODO Add collision detection

    (incr vel :y 0.2)

    (incr plr :x vel.x)
    (incr plr :y vel.y)

    (cls)
    (map)
    (draw-player plr))

